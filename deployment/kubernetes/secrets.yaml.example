# Kubernetes Secrets Example
# DO NOT commit this file with real values!
# Create actual secrets using: kubectl create secret generic bharatmart-secrets --from-env-file=secrets.env

apiVersion: v1
kind: Secret
metadata:
  name: bharatmart-secrets
  namespace: bharatmart
type: Opaque
stringData:
  # Layer 3: Database Connection
  supabase_url: "https://your-project.supabase.co"
  supabase_anon_key: "your-anon-key"
  supabase_service_role_key: "your-service-role-key"
  database_url: "postgresql://user:password@host:5432/database"

  # Layer 4: Cache Redis Password
  cache_redis_password: "your-cache-redis-password"

  # Layer 5: Queue Redis Password
  queue_redis_password: "your-queue-redis-password"

  # External Services
  smtp_host: "smtp.gmail.com"
  smtp_port: "587"
  smtp_user: "your-email@example.com"
  smtp_password: "your-email-password"

  # Security
  session_secret: "your-session-secret"
  jwt_secret: "your-jwt-secret"
  api_key: "your-internal-api-key"
